@model HotelSearchViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona Luxury Hotels</h1>
                    <p>
                       Here are the best hotel booking sites,including recommendations for international travel and for finding low-priced hotel rooms.
                    </p>
                    <a href="#" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>
                        Booking Your Hotel
                    </h3>



                    <form action="GetSearchList" method="post">
                        <div class="check-date">

                            <label for="date-in">Location:</label>
                            <input type="text" asp-for="cityName">
                        </div>
                        <div class="check-date">
                            <label for="date-in">Check In:</label>
                            <input type="text" class="date-input" asp-for="arrivalDate">
                            <i class="icon_calendar"></i>
                        </div>

                        <div class="check-date">
                            <label for="date-out">Check Out:</label>
                            <input type="text" class="date-input" asp-for="departureDate">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="select-option">
                            <label for="guest">Guest:</label>
                            <select asp-for="adultCount">
                                <option value="1">1 Adult</option>
                                <option value="2">2 Adult</option>
                                <option value="3">3 Adult</option>
                                <option value="4">4 Adult</option>
                                <option value="5">5 Adult</option>
                            </select>
                        </div>
                        <div class="select-option">
                            <label for="room">Room:</label>
                            <select asp-for="roomCount">
                                <option value="1">1 Room</option>
                                <option value="2">2 Room</option>
                                <option value="3">3 Room</option>
                                <option value="4">4 Room</option>
                            </select>
                        </div>
                        <button type="submit">
                           Check Availability
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-3.jpg"></div>
    </div>
</section>

@await Component.InvokeAsync("_UILayoutAboutUsComponentPartial")

@await Component.InvokeAsync("_UILayoutWhatWeDoComponentPartial")